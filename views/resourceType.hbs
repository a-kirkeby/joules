<div class="row">
  <div class="col-lg-12 grid-margin">
    <h2>{{ headline }}</h2>
    <p class="text-muted">Review this specific type of resource and its impact on emisssions</p>
  </div>
</div>

<div class="row">
  <div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <div class="statistics-details d-flex align-items-center justify-content-between">
          {{#with summary}}
          <div>
            <p class="statistics-title">Total Emissions</p>
            <h3 class="rate-percentage">{{ co2 totalGramsCO2}}</h3>
            <p class="text-success d-flex">
              &nbsp;
              {{!-- <i class="mdi mdi-menu-down"></i><span>-2.35%</span> --}}
              </p>
          </div>
          <div>
            <p class="statistics-title">Total Size</p>
            <h3 class="rate-percentage">{{ bytes totalTransferSize }}</h3>
            <p class="text-muted d-flex">&nbsp;</p>
          </div>
          <div>
            <p class="statistics-title">Total Power</p>
            <h3 class="rate-percentage">{{ kw totalKWHours }}</h3>
            <p class="text-success d-flex">&nbsp;</p>
          </div>
          <div>
            <p class="statistics-title">Contribution</p>
            <h3 class="rate-percentage">{{ totalEmissionsContribution }}%</h3>
            <p class="text-success d-flex">of measurement</p>
          </div>
          {{/with}}
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">{{ pages.length }} resources</h4>
        <p class="card-description">
          Review resources found in the latest measurement
        </p>
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th>#</th>
                <th>Name</th>
                <th>Type</th>
                <th>Size</th>
                <th>Power</th>
                <th>Emissions</th>
                <th>Contribution</th>
              </tr>
            </thead>
            <tbody>
              {{#each resources}}
              <tr>
                <td>{{ inc @index }}</td>
                <td>{{ clip 50 name }}</td>
                <td>{{ initiatorType }}</td>
                <td>{{ bytes transferSize }}</td>
                <td>{{ kw kWHours }}</td>
                <td>{{ co2 gramsCO2 }}</td>
                <td>{{ emissionsContribution }}%</td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>